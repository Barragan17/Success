<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout_quotes_splash"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".activities.SplashQuotesActivity">

    <TextView
        android:id="@+id/tv_quotes"
        android:paddingStart="@dimen/padding_quotes"
        android:paddingEnd="@dimen/padding_quotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        tools:text="Quotes"
        android:textSize="@dimen/test_size_quotes"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

</LinearLayout>